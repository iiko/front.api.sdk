<Window x:Class="Resto.Front.Api.SamplePlugin.Restaurant.StreetBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             mc:Ignorable="d" 
             SizeToContent="WidthAndHeight" ResizeMode="NoResize" Topmost="True">
    
    <Grid HorizontalAlignment="Left"  VerticalAlignment="Top" Height="100" Width="300">
        <TextBox x:Name="txtAdd" Margin="10,20,10,0" TextWrapping="Wrap" Text="" Height="25" VerticalAlignment="Top" />
        <Button Content="Add" HorizontalAlignment="Left" Margin="190,65,0,0" 
                VerticalAlignment="Top" Width="100" Height="25" Click="BtnOkClick"
                IsEnabled="{Binding ElementName=txtAdd}" />
    </Grid>
</Window>
